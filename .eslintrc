{
    "env": {
        "es6": true,
        "browser": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["react"],
    "globals": {
        "process": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [2, 80],
        "indent": [2, 2],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": 1,
        "no-console": 0,
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-unknown-property": 2
    }
}
